<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/home">


    <RelativeLayout
        android:id="@+id/activity_landing"
        android:layout_width="412dp"
        android:layout_height="733dp"
        tools:layout_editor_absoluteX="0dp">


        <ImageView
            android:id="@+id/img_background"
            android:layout_width="match_parent"
            android:layout_height="201dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-1dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/pro" />

        <ImageView
            android:id="@+id/pro"
            android:layout_width="98dp"
            android:layout_height="95dp"
            android:layout_below="@+id/img_background"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-40dp"
            android:background="@drawable/profile"/>

        <TextView
            android:id="@+id/Work"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_above="@+id/logOut"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="107dp"
            android:layout_marginTop="261dp"
            android:layout_marginEnd="84dp"
            android:layout_marginBottom="67dp"
            android:text="Work In progress"
            android:textColor="#FFFF8D"
            android:textSize="25dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/logOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="159dp"
            android:layout_marginBottom="65dp"
            android:backgroundTint="#F66363"
            android:text="Log Out" />

        <TextView
            android:id="@+id/Name"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:layout_below="@+id/pro"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="97dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="94dp"
            android:layout_marginBottom="-55dp"
            android:text="Name Here"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#FFD180"
            android:textSize="25dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <!-- negative margin to half of height -->
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>